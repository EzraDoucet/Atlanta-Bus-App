<div class="container centered">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for(@location) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :street_address, label: "What Street You On?" %>
          <%= f.input :city, label: "What City You In?", collection: ['Atlanta', 'Roswell', 'Alpharett', 'South DeKalb'], selected: 'Atlanta' %>
          <%= f.input :distance, label: "How Far You Wanna Walk?", collection: [0.02, 0.06, 1.0], selected: 0.06 %>
        </div>

        <div class="form-actions">
          <%= f.submit 'Find Dat', class: 'btn btn-success'%>
        </div>
      </div>
    </div>
  <% end %>
</div>